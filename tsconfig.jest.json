{
  "extends": "./tsconfig.json",
  "compilerOptions": {
  "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "isolatedModules": true
},
  "include": [
  "src/**/*",
  "**/*.test.ts",
  "**/*.test.tsx",
  "**/*.spec.ts",
  "**/*.spec.tsx",
  "jest.setup.ts"
],
  "exclude": [
  "node_modules",
  "dist",
  "server",
  "coverage"
]
}
